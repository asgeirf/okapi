
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>build-okapi</artifactId>
        <groupId>net.sf.okapi</groupId>
        <version>1.0.0</version>
    </parent>    
    <artifactId>okapi-core-ui-install-dependencies</artifactId>
    <name>Okapi Install Core UI Dependencies</name>
    <packaging>pom</packaging>
    <properties>
        <third.party.rel.path>src/main/resources/</third.party.rel.path>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.3</version>
                <executions>
                    <execution>
                        <id>install.windows.x86</id>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>org.eclipse.swt</groupId>
                            <artifactId>swt-win-32</artifactId>
                            <version>3.5</version>
                            <file>${third.party.rel.path}win32-x86/org.eclipse.swt.win32.win32.x86_3.5.0.v3550b.jar</file>
                            <generatePom>true</generatePom>
                            <packaging>jar</packaging>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>install.macosx.cocoa</id>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>org.eclipse.swt</groupId>
                            <artifactId>swt-cocoa-macosx</artifactId>
                            <version>3.5</version>
                            <file>${third.party.rel.path}cocoa-macosx/org.eclipse.swt.cocoa.macosx_3.5.0.v3550b.jar</file>
                            <generatePom>true</generatePom>
                            <packaging>jar</packaging>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>install.macosx.carbon</id>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>org.eclipse.swt</groupId>
                            <artifactId>swt-carbon-macosx</artifactId>
                            <version>3.5</version>
                            <file>${third.party.rel.path}carbon-macosx/swt.jar</file>
                            <generatePom>true</generatePom>
                            <packaging>jar</packaging>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>install.linux.x86</id>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>org.eclipse.swt</groupId>
                            <artifactId>swt-gtk2-linux-x86</artifactId>
                            <version>3.5</version>
                            <file>${third.party.rel.path}gtk2-linux-x86/swt.jar</file>
                            <generatePom>true</generatePom>
                            <packaging>jar</packaging>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>install.linux.x86_64</id>
                        <phase>validate</phase>
                        <configuration>
                            <groupId>org.eclipse.swt</groupId>
                            <artifactId>swt-gtk2-linux-x86_64</artifactId>
                            <version>3.5</version>
                            <file>${third.party.rel.path}gtk2-linux-x86_64/swt.jar</file>
                            <generatePom>true</generatePom>
                            <packaging>jar</packaging>
                        </configuration>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
