<?xml version="1.0"?>
<project name="common" default="all" basedir=".">

	<property name="proj" value="../../common/net.sf.okapi.common"/> 
	<property name="src" value="${proj}/src"/> 
	<property name="tmp" value="tmp"/>
 
	<target name="init">
		<mkdir dir="${tmp}"/>
 	</target>

	<target name="all" depends="init">
 		<javac srcdir="${src}" destdir="${tmp}"/> 
		<copy todir="${tmp}">
			<fileset dir="${src}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
