<?xml version="1.0"?>
<project name="filters.markupfilter" default="filters.markupfilter"> 

	<property name="proj_filters.markupfilter" value="../../filters/net.sf.okapi.filters.markupfilter"/> 
	<property name="src_filters.markupfilter" value="${proj_filters.markupfilter}/src"/> 
	<property name="lib_filters.markupfilter" value="${proj_filters.markupfilter}/lib"/> 
 
	<path id="mainClassPath_filters.markupfilter">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/jyaml-1.3.jar"/>
		<pathelement location="${distlib}/jericho-html-3.1-dev-4.jar"/>
	</path>
	
	<target name="filters.markupfilter"> 
		<copy todir="${distlib}">
			<fileset dir="${lib_filters.markupfilter}"/>
		</copy>
		<ant antfile="../shared/build_common.xml" inheritAll="true"/>
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.markupfilter}" destdir="${tmp}" classpathref="mainClassPath_filters.markupfilter"/>
		<copy todir="${tmp}">
			<fileset dir="${src_filters.markupfilter}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
