<?xml version="1.0"?>
<project name="filters.po" default="filters.po"> 

	<property name="proj_filters.po" value="../../filters/net.sf.okapi.filters.po"/> 
	<property name="src_filters.po" value="${proj_filters.po}/src"/> 
 
	<path id="mainClassPath_filters.po">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/slf4j-api-1.5.0.jar"/>
	</path>
	
	<target name="filters.po"> 
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.po}" destdir="${tmp}" classpathref="mainClassPath_filters.po"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.po}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/po">
			<fileset dir="../../help/filters/ui/po" />
		</copy>

	</target>

</project>
