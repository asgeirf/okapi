<?xml version="1.0"?>
<project name="filters.openxml" default="filters.openxml"> 

	<property name="proj_filters.openxml" value="../../filters/net.sf.okapi.filters.openxml"/> 
	<property name="src_filters.openxml" value="${proj_filters.openxml}/src"/> 
 
	<path id="mainClassPath_filters.openxml">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/slf4j-api-1.5.0.jar"/>
		<pathelement location="${distlib}/commons-logging-api-1.1.1.jar"/>
		<pathelement location="${distlib}/jyaml-1.3.jar"/>
		<pathelement location="${distlib}/log4j-api-1.2.15.jar"/>
	</path>

	<target name="filters.openxml"> 
		<ant antfile="../shared/build_filters.markupfilter.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.openxml}" destdir="${tmp}" classpathref="mainClassPath_filters.openxml"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.openxml}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/openxml">
			<fileset dir="../../help/filters/ui/openxml" />
		</copy>
	</target>

</project>
