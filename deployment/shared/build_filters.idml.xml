<?xml version="1.0"?>
<project name="filters.idml" default="filters.idml"> 

	<property name="proj_filters.idml" value="../../filters/net.sf.okapi.filters.idml"/> 
	<property name="src_filters.idml" value="${proj_filters.idml}/src"/> 
 
	<path id="mainClassPath_filters.idml">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/stax-api-1.0.1.jar"/>
		<pathelement location="${distlib}/wstx-lgpl-3.2.8.jar"/>
	</path>
	
	<target name="filters.idml"> 
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.idml}" destdir="${tmp}" classpathref="mainClassPath_filters.idml"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.idml}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/idml">
			<fileset dir="../../help/filters/ui/idml" />
		</copy>
	</target>

</project>
