<?xml version="1.0"?>
<project name="tm.trados" default="tm.trados"> 

	<property name="proj_tm.trados" value="../../tm/net.sf.okapi.tm.trados"/> 
	<property name="src_tm.trados" value="${proj_tm.trados}/src"/> 
	<property name="lib_tm.trados" value="${proj_tm.trados}/lib"/> 
 
	<path id="mainClassPath_tm.trados">
		<pathelement location="${tmp}"/>
		<pathelement location="${lib_tm.trados}/jacob.jar"/>
	</path>
	
	<target name="tm.trados"> 
		<ant antfile="../shared/build_lib.translation.xml" inheritAll="true"/>

 		<javac srcdir="${src_tm.trados}" destdir="${tmp}" classpathref="mainClassPath_tm.trados"/>

		<copy todir="${tmp}">
			<fileset dir="${src_tm.trados}" excludes="**/*.java"/>
		</copy>
		<copy todir="${distlib}">
			<fileset dir="${lib_tm.trados}"/>
		</copy>
	</target>

</project>
