<?xml version="1.0"?>
<project name="ui.filters.properties" default="ui.filters.properties"> 

	<property name="proj_ui.filters.properties" value="../../filters/net.sf.okapi.ui.filters.properties"/> 
	<property name="src_ui.filters.properties" value="${proj_ui.filters.properties}/src"/> 
 
	<path id="mainClassPath_ui.filters.properties">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/swt.jar"/>
		<pathelement location="${distlib}/okapi-lib.jar"/>
	</path>
	
	<target name="ui.filters.properties"> 
		<ant antfile="../shared/build_ui.filters.common.xml" inheritAll="true"/>

 		<javac srcdir="${src_ui.filters.properties}" destdir="${tmp}" classpathref="mainClassPath_ui.filters.properties"/>

		<copy todir="${tmp}">
			<fileset dir="${src_ui.filters.properties}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
