<?xml version="1.0"?>
<project name="steps.common" default="steps.common"> 

	<property name="proj_steps.common" value="../../steps/net.sf.okapi.steps.common"/> 
	<property name="src_steps.common" value="${proj_steps.common}/src"/> 

	<path id="mainClassPath_steps.common">
		<pathelement location="${tmp}"/>
	</path>
	
	<target name="steps.common"> 
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
		<ant antfile="../shared/build_pipeline.xml" inheritAll="true"/>
 		<javac srcdir="${src_steps.common}" destdir="${tmp}" classpathref="mainClassPath_steps.common"/>
		<copy todir="${tmp}">
			<fileset dir="${src_steps.common}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
