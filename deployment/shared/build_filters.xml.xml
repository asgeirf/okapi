<?xml version="1.0"?>
<project name="filters.xml" default="filters.xml"> 

	<property name="proj_filters.xml" value="../../filters/net.sf.okapi.filters.xml"/> 
	<property name="src_filters.xml" value="${proj_filters.xml}/src"/> 
 
	<path id="mainClassPath_filters.xml">
		<pathelement location="${tmp}"/>
	</path>
	
	<target name="filters.xml"> 
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.xml}" destdir="${tmp}" classpathref="mainClassPath_filters.xml"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.xml}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/xml">
			<fileset dir="../../help/filters/ui/xml" />
		</copy>
	</target>

</project>
