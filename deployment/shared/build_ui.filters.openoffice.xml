<?xml version="1.0"?>
<project name="ui.filters.openoffice" default="ui.filters.openoffice"> 

	<property name="proj_ui.filters.openoffice" value="../../filters/net.sf.okapi.ui.filters.openoffice"/> 
	<property name="src_ui.filters.openoffice" value="${proj_ui.filters.openoffice}/src"/> 
 
	<path id="mainClassPath_ui.filters.openoffice">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/swt.jar"/>
		<pathelement location="${distlib}/okapi-lib.jar"/>
	</path>
	
	<target name="ui.filters.openoffice"> 
		<ant antfile="../shared/build_ui.filters.common.xml" inheritAll="true"/>

 		<javac srcdir="${src_ui.filters.openoffice}" destdir="${tmp}" classpathref="mainClassPath_ui.filters.openoffice"/>

		<copy todir="${tmp}">
			<fileset dir="${src_ui.filters.openoffice}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
