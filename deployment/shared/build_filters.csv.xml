<?xml version="1.0"?>
<project name="filters.csv" default="filters.csv"> 

	<property name="proj_filters.csv" value="../../filters/net.sf.okapi.filters.csv"/> 
	<property name="src_filters.csv" value="${proj_filters.csv}/src"/> 
 
	<path id="mainClassPath_filters.csv">
		<pathelement location="${tmp}"/>
	</path>
	
	<target name="filters.csv"> 
		<ant antfile="../shared/build_filters.plaintext.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.csv}" destdir="${tmp}" classpathref="mainClassPath_filters.csv"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.csv}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>

	</target>

</project>
