<?xml version="1.0"?>
<project name="ui.lib.segmentation_nojar" default="ui.lib.segmentation_nojar"> 

	<property name="proj_ui.lib.segmentation_nojar" value="../../libraries/net.sf.okapi.ui.lib.segmentation"/> 
	<property name="src_ui.lib.segmentation_nojar" value="${proj_ui.lib.segmentation_nojar}/src"/> 
 
	<path id="mainClassPath_ui.lib.segmentation_nojar">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/swt.jar"/>
	</path>
	
	<target name="ui.lib.segmentation_nojar"> 
		<ant antfile="../shared/build_lib.segmentation.xml" inheritAll="true"/>
		<ant antfile="../shared/build_ui.common_nojar.xml" inheritAll="true"/>
		
 		<javac srcdir="${src_ui.lib.segmentation_nojar}" destdir="${tmp}" classpathref="mainClassPath_ui.lib.segmentation_nojar"/>
		<copy todir="${tmp}">
			<fileset dir="${src_ui.lib.segmentation_nojar}" excludes="**/*.java"/>
		</copy>

		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/lib/ui/segmentation">
			<fileset dir="../../help/lib/ui/segmentation" />
		</copy>
	</target>

</project>
