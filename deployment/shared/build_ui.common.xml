<?xml version="1.0"?>
<project name="ui.common" default="ui.common"> 

	<property name="proj_ui.common" value="../../common/net.sf.okapi.ui.common"/> 
	<property name="src_ui.common" value="${proj_ui.common}/src"/> 
 
	<path id="mainClassPath_ui.common">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/swt.jar"/>
		<pathelement location="${distlib}/okapi-lib.jar"/>
	</path>
	
	<target name="ui.common"> 
 		<javac srcdir="${src_ui.common}" destdir="${tmp}" classpathref="mainClassPath_ui.common"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_ui.common}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/common">
			<fileset dir="../../help/common" />
		</copy>
		
	</target>

</project>
