<?xml version="1.0"?>
<project name="filters.common" default="filters.common"> 

	<property name="proj_filters.common" value="../../common/net.sf.okapi.filters.common"/> 
	<property name="src_filters.common" value="${proj_filters.common}/src"/> 

	<path id="mainClassPath_filters.common">
		<pathelement location="${tmp}"/>
	</path>
	
	<target name="filters.common"> 
		<ant antfile="../shared/build_common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.common}" destdir="${tmp}" classpathref="mainClassPath_filters.common"/>
		<copy todir="${tmp}">
			<fileset dir="${src_filters.common}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
