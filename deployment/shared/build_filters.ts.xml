<?xml version="1.0"?>
<project name="filters.ts" default="filters.ts"> 

	<property name="proj_filters.ts" value="../../filters/net.sf.okapi.filters.ts"/> 
	<property name="src_filters.ts" value="${proj_filters.ts}/src"/> 
 
	<path id="mainClassPath_filters.ts">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/stax-api-1.0.1.jar"/>
		<pathelement location="${distlib}/wstx-lgpl-3.2.8.jar"/>
	</path>
	
	<target name="filters.ts"> 
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.ts}" destdir="${tmp}" classpathref="mainClassPath_filters.ts"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.ts}" excludes="**/*.java"/>
		</copy>
		
<!--		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/ts">
			<fileset dir="../../help/filters/ui/ts" />
		</copy>-->
	</target>

</project>
