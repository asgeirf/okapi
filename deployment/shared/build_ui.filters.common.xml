<?xml version="1.0"?>
<project name="ui.filters.common" default="ui.filters.common"> 

	<property name="proj_ui.filters.common" value="../../common/net.sf.okapi.ui.filters.common"/> 
	<property name="src_ui.filters.common" value="${proj_ui.filters.common}/src"/> 
 
	<path id="mainClassPath_ui.filters.common">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/swt.jar"/>
	</path>
	
	<target name="ui.filters.common"> 
		<ant antfile="../shared/build_ui.common.xml" inheritAll="true"/>
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_ui.filters.common}" destdir="${tmp}" classpathref="mainClassPath_ui.filters.common"/>
		
		<copy todir="${tmp}">
			<fileset dir="${src_ui.filters.common}" excludes="**/*.java"/>
		</copy>
		
	</target>

</project>
