<?xml version="1.0"?>
<project name="tm.globalsight" default="tm.globalsight"> 

	<property name="proj_tm.globalsight" value="../../tm/net.sf.okapi.tm.globalsight"/> 
	<property name="src_tm.globalsight" value="${proj_tm.globalsight}/src"/> 
	<property name="lib_tm.globalsight" value="${proj_tm.globalsight}/lib"/> 
 
	<path id="mainClassPath_tm.globalsight">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/axis.jar"/>
		<pathelement location="${distlib}/wsdl4j-1.5.1.jar"/>
		<pathelement location="${distlib}/jaxrpc.jar"/>
		<pathelement location="${distlib}/commons-logging-1.0.4.jar"/>
		<pathelement location="${distlib}/commons-discovery-0.2.jar"/>
		<pathelement location="${distlib}/saaj.jar"/>
	</path>
	
	<target name="tm.globalsight"> 
		<copy todir="${distlib}">
			<fileset dir="${lib_tm.globalsight}"/>
		</copy>
		<ant antfile="../shared/build_lib.translation.xml" inheritAll="true"/>
		
 		<javac srcdir="${src_tm.globalsight}" destdir="${tmp}" classpathref="mainClassPath_tm.globalsight"/>
		
		<copy todir="${tmp}">
			<fileset dir="${src_tm.globalsight}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
