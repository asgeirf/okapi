<?xml version="1.0"?>
<project name="tm.opentran" default="tm.opentran"> 

	<property name="proj_tm.opentran" value="../../tm/net.sf.okapi.tm.opentran"/> 
	<property name="src_tm.opentran" value="${proj_tm.opentran}/src"/> 
	<property name="lib_tm.opentran" value="${proj_tm.opentran}/lib"/> 
 
	<path id="mainClassPath_tm.opentran">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/xmlrpc-client-3.1.jar"/>
		<pathelement location="${distlib}/xmlrpc-common-3.1.jar"/>
		<pathelement location="${distlib}/ws-commons-util-1.0.2.jar"/>
	</path>
	
	<target name="tm.opentran"> 
		<copy todir="${distlib}">
			<fileset dir="${lib_tm.opentran}"/>
		</copy>
		<ant antfile="../shared/build_lib.translation.xml" inheritAll="true"/>
		
 		<javac srcdir="${src_tm.opentran}" destdir="${tmp}" classpathref="mainClassPath_tm.opentran"/>
		
		<copy todir="${tmp}">
			<fileset dir="${src_tm.opentran}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
