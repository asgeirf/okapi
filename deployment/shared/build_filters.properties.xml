<?xml version="1.0"?>
<project name="filters.properties" default="filters.properties"> 

	<property name="proj_filters.properties" value="../../filters/net.sf.okapi.filters.properties"/> 
	<property name="src_filters.properties" value="${proj_filters.properties}/src"/> 
 
	<path id="mainClassPath_filters.properties">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/slf4j-api-1.5.0.jar"/>
	</path>
	
	<target name="filters.properties"> 
		<ant antfile="../shared/build_filters.common.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.properties}" destdir="${tmp}" classpathref="mainClassPath_filters.properties"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.properties}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/properties">
			<fileset dir="../../help/filters/ui/properties" />
		</copy>

	</target>

</project>
