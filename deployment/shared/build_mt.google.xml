<?xml version="1.0"?>
<project name="mt.google" default="mt.google"> 

	<property name="proj_mt.google" value="../../mt/net.sf.okapi.mt.google"/> 
	<property name="src_mt.google" value="${proj_mt.google}/src"/> 
 
	<path id="mainClassPath_mt.google">
		<pathelement location="${tmp}"/>
	</path>
	
	<target name="mt.google"> 
		<ant antfile="../shared/build_lib.translation.xml" inheritAll="true"/>
		
 		<javac srcdir="${src_mt.google}" destdir="${tmp}" classpathref="mainClassPath_mt.google"/>
		
		<copy todir="${tmp}">
			<fileset dir="${src_mt.google}" excludes="**/*.java"/>
		</copy>
	</target>

</project>
