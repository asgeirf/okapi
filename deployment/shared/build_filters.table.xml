<?xml version="1.0"?>
<project name="filters.table" default="filters.table"> 

	<property name="proj_filters.table" value="../../filters/net.sf.okapi.filters.table"/> 
	<property name="src_filters.table" value="${proj_filters.table}/src"/> 
 
	<path id="mainClassPath_filters.table">
		<pathelement location="${tmp}"/>
	</path>
	
	<target name="filters.table"> 
		<ant antfile="../shared/build_filters.plaintext.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.table}" destdir="${tmp}" classpathref="mainClassPath_filters.table"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.table}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>

	</target>

</project>
