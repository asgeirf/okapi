<?xml version="1.0"?>
<project name="filters.html" default="filters.html"> 

	<property name="proj_filters.html" value="../../filters/net.sf.okapi.filters.html"/> 
	<property name="src_filters.html" value="${proj_filters.html}/src"/> 
 
	<path id="mainClassPath_filters.html">
		<pathelement location="${tmp}"/>
		<pathelement location="${distlib}/slf4j-api-1.5.0.jar"/>
		<pathelement location="${distlib}/commons-logging-api-1.1.1.jar"/>
		<pathelement location="${distlib}/jyaml-1.3.jar"/>
		<pathelement location="${distlib}/kwalify.jar"/>
		<pathelement location="${distlib}/log4j-api-1.2.15.jar"/>
	</path>
	
	<target name="filters.html">
		<ant antfile="../shared/build_filters.markupfilter.xml" inheritAll="true"/>
 		<javac srcdir="${src_filters.html}" destdir="${tmp}" classpathref="mainClassPath_filters.html"/>
 		
		<copy todir="${tmp}">
			<fileset dir="${src_filters.html}" excludes="**/*.java"/>
		</copy>
		
		<copy file="../../help/help.css" todir="${dist}/help"/>
		<copy todir="${dist}/help/filters/ui/html">
			<fileset dir="../../help/filters/ui/html" />
		</copy>

	</target>

</project>
