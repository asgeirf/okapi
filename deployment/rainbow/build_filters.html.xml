<?xml version="1.0"?>
<project name="filters.openoffice" default="all" basedir="."> 

	<property name="platform" value="win32-x86"/> 
	<property name="proj" value="../../filters/net.sf.okapi.filters.html"/> 
	<property name="src" value="${proj}/src"/> 
 	<property name="tmp" value="tmp"/>
	<property name="dist" value="dist_${platform}"/>
	<property name="dist-bin" value="${dist}/lib"/>
 
	<path id="mainClassPath">
		<pathelement location="${tmp}"/>
		<pathelement location="../../user-libs/slf4j-api-1.5.0.jar"/>
		<pathelement location="${dist-bin}/jericho-html-3.0-beta1.jar"/>
	</path>
	
	<target name="init">
		<mkdir dir="${tmp}"/>
		<mkdir dir="${dist-bin}"/>
 	</target>

	<target name="all" depends="init"> 
		<ant antfile="build_common.xml" inheritAll="false"/>
		<ant antfile="build_filters.common.xml" inheritAll="false"/>
		<ant antfile="build_filters.markupfilter.xml" inheritAll="false"/>
 		<javac srcdir="${src}" destdir="${tmp}" classpathref="mainClassPath"/>
		<copy todir="${tmp}">
			<fileset dir="${src}" excludes="**/*.java"/>
		</copy>
		<copy todir="${dist-bin}">
			<fileset dir="${proj}/lib"/>
		</copy>
	</target>

</project>
